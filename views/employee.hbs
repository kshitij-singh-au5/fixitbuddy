                aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ml-auto text-dark">
                   
                   
                    <li class="btn-group dropper">
                        <a class="nav-link dropdown-toggle" data-toggle="dropdown" aria-haspopup="true"
                            aria-expanded="false">Admin
                        </a>
                        <div class=" dropdown-menu ">
                            <a href="/profile" class="dropdown-item" type="button">My Profile</a>
                            <a href="/logout" class="dropdown-item" type="button">Logout</a>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
          
  
   <div class="container-fluid">
        <div class="row flex-xl-nowrap">
            <div class="col-12 col-md-3 col-xl-2 bd-sidebar shadow " style="margin-left: 30px; height:400px;width:400px" id="sidebar-nav">
                <nav class="bd-links collapse">
                    <div class="bd-toc-item">
                        <a class="bd-toc-link" href="/">Dashboard</a>
                    </div>
                    <hr>
                    <div class="bd-toc-item">
                        <a class="bd-toc-link" href="/read-employee">Employee</a>
                    </div>
                    <hr>
                    <div class="bd-toc-item">
                        <a class="bd-toc-link" href="/orderapproval">Order Approval</a>
                    </div>
                    <hr>
                    <div class="bd-toc-item">
                        <a class="bd-toc-link" href="/information">Information</a>
                    </div>
                </nav> 
            </div> 
            <main class="col-md-12  col-xl-11 py-md-3 pl-md-5" role="main" id="main-content">  
                <h1 class="bd-title mt-2" style="margin-right:750px">Employees</h1>
                <hr>
                 <h3><a class="btn btn-secondary offset-9 mt-2" href="/create_details"><i class="fa fa-plus"></i> add new employee</a></h3>
                    <br>
               <div class="row">
                    
                    <table class="table text-center mt-1 "   id="employee-table">
                        <thead>
                            <tr>
                            <th>Select</th>
                            <th scope="col">employeeID</th>
                            <th scope="col">firstName</th>
                            <th scope="col">lastName</th>
                            <th scope="col">Email</th>
                            <th scope="col">mobile</th>
                            <th scope="col">Departmant</th>
                            <th scope="col">JobTitle</th>
                            <th scope="col">Experience</th>
                            <th scope="col">state</th>
                            <th scope="col">birth.date</th>
                            <th scope="col">hire.date</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each blogs}}
                            <tr>
                            <td scope="row">
                               
                           
                                <a href="/update/{{this._id}}"><i class="fa fa-pencil fa-lg  edit"></i></a>
                                <a href="/delete_employee/{{this._id}}" onclick="return confirm('Are you sure to delete this record ?');"><i class="fa fa-trash fa-lg offset-2" aria-hidden="true"></i></a>

           
                            </td>
                            
                            <td>{{this.id}}</td>
                            <td>{{this.firstname}}</td>
                            <td>{{this.lastname}}</td>
                            <td>{{this.email}}</td>
                            <td>{{this.mobile}}</td>
                            <td>{{this.department}}</td>
                            <td>{{this.title}}</td>
                            <td>{{this.experience}}</td>
                            <td>{{this.state}}</td>
                            <td>{{Bdate}}</td>
                            <td>{{Hdate}}</td>
                            </tr>
                            {{/each}}
                        </tbody>
                        </table>
                </div>
            </main>
        </div>
    </div>
    
    
    <footer class="py-5 bg-dark">
        <ul class="list-group list-group-horizontal-sm offset-9">
            <li>
                <a class="anc" href="/aboutus">About Us</a>
            </li>
            <li class=" ml-3">
